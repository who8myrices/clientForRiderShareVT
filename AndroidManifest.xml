<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anky.googleplus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.anky.googleplus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anky.googleplus.LocEnd"
            android:label="@string/title_activity_loc_end" >
        </activity>
        <activity
            android:name="com.anky.googleplus.LocationStart"
            android:label="@string/title_activity_location_start" >
        </activity>
        <activity
            android:name="com.anky.googleplus.LocationEnd"
            android:label="@string/title_activity_location_end" >
        </activity>
        <activity
            android:name="com.anky.googleplus.DriverRider"
            android:label="@string/title_activity_driver_rider" >
        </activity>
        <activity
            android:name="com.anky.googleplus.FinalStop"
            android:label="@string/title_activity_final_stop" >
        </activity>
        <activity
            android:name="com.anky.googleplus.DriverInfo"
            android:label="@string/title_activity_driver_info" >
        </activity>
        <activity
            android:name="com.anky.googleplus.NewSettingsActivity"
            android:label="@string/title_activity_new_settings" >
        </activity>
        <activity
            android:name="com.anky.googleplus.MainPageAfterLogin"
            android:label="@string/title_activity_main_page_after_login" >
        </activity>
        <activity
            android:name="com.anky.googleplus.ListOfDriver"
            android:label="@string/title_activity_list_of_driver" >
        </activity>
        <activity
            android:name="com.anky.googleplus.DriverList"
            android:label="@string/title_activity_driver_list" >
        </activity>
        <activity
            android:name="com.anky.googleplus.Chat"
            android:label="@string/title_activity_chat" >
        </activity>
    </application>

</manifest>