<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DriverRider" >

    <Button
        android:id="@+id/DriverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RiderButton"
        android:layout_alignBottom="@+id/RiderButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="68dp"
        android:text="Driver" />
 
    <Spinner
        android:id="@+id/EndLocationSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timePicker1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" />

    <Spinner
        android:id="@+id/StartLocationSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EndLocationSpinner"
        android:layout_alignLeft="@+id/EndLocationSpinner" />

    <TimePicker
        android:id="@+id/DepartureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/StartLocationSpinner"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/RiderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="32dp"
        android:text="Rider" />

    <Button
        android:id="@+id/NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/DepartureTime"
        android:layout_below="@+id/StartLocationSpinner"
        android:text="Next" />

    <Spinner
        android:id="@+id/SmokeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EndLocationSpinner"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="37dp" />

    <EditText
        android:id="@+id/seatNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/StartLocationSpinner"
        android:layout_alignRight="@+id/NextButton"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</RelativeLayout>